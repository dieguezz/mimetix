@import '~core/variables';

app-home
  .slide1
    background-color $paleGrey
    color: $black;
  .fade
    transition: opacity .5s ease-in-out
    opacity 0
  .fade-in
    opacity 1
.home-article
  background-size contain
  padding-bottom 50%
  background-size cover
  background-repeat no-repeat
  position relative
  color white
  cursor pointer
  @media $mediaXS
    padding-bottom 100%
  .material-icons
    bottom 0
    right 0
    position absolute
    font-size 34px
.home-article-1
  background-image url('../../assets/images/section-home-2.png');
  background-color $red
  background-position 50% 70px
.home-article-2
  background-image url('../../assets/images/section-home-3.png');
  background-color $darkGrey
  background-position 50% 120px
.home-article-3
  background-image url('../../assets/images/section-home-1.png');
  background-color #03A9F4
  background-position 50% 120px
  background-size contain
.home-article-4
  background-image url('../../assets/images/space.gif');
  background-blend-mode: darken;
  background-position: 0 40%;
  background-color #FFEB3B
  background-size: cover;
  transition all .25s ease-in-out
.home-article-5
  background-image url('../../assets/images/gadwords.png');
  background-color #4caf50
  background-position: 50% 80%;
  background-size: 50%;
.home-article-6
  background-image url('../../assets/images/adwords.png');
  background-color #009688
  background-position: 50% 50%;
  background-size: 40%;

.scrolling
  .home-article-4
    background-image url('../../assets/images/space.jpg')

.contact-bubble
  position fixed
  top 10px
  right 10px
  border-radius: 50%;
  z-index 9
  color white
