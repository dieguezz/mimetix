body
  background-color #f6f6f6
  font-size 14px
.button-primary
  box-shadow 0 1px 16px 1px rgba(45, 237, 209, 0)
  border-radius 5px
  background-color #00d1b7
  padding 17px 40px
  border 0
  color white
  display inline-block
  font-family Raleway
  text-transform uppercase
  font-weight bold
  transition box-shadow .15s ease-in
  cursor: pointer;
  &:hover
    box-shadow 0 3px 16px 1px rgba(45, 237, 209, 0.5)

h1 {
  font-size: 16px;
  font-weight: 300;
  padding: 10px 0;
}
.eq-flex {
  flex: 1;
  display: flex;
}

.flex {
  display: flex;
}

.c-white {
  color: white;
}

.column {
  flex-direction: column;
}

.row {
  flex-direction: row;
}

.h-center {
  justify-content: center;
}

.l-normal {
  text-decoration: none;
  color: white;
}

.h-between {
  justify-content: space-between;
}

.padding {
  padding: 1em;
}

